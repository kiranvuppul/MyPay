<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frag_bg_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/navigationview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.user.easypay.ViewFlowlibrary.ViewFlow
            android:id="@+id/viewflow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sidebuffer="9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="center">

            <com.user.easypay.ViewFlowlibrary.CircleFlowIndicator
                android:id="@+id/viewflowindic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dip"
                app:activeColor="@color/colorPrimary"
                app:inactiveColor="@color/colorDark"
                app:inactiveType="fill"
                app:radius="5dp"
                app:snap="true"
                app:spacing="8dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
